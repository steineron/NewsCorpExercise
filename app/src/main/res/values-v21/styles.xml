<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/feeder_blue</item>
        <item name="android:colorPrimaryDark">@color/feeder_dark_blue</item>
        <item name="android:colorAccent">@color/feeder_orange</item>
    </style>

    <style name="QuizProgressTextAppearance" parent="android:TextAppearance.Material.Headline">
        <item name="android:background">@color/feeder_orange</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/margin_small</item>
    </style>

    <style name="QuizTitleTextAppearance" parent="android:TextAppearance.Material.Headline">
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:background">@color/feeder_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="QuizCaptionTextAppearance" parent="android:TextAppearance.Material.Caption">
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:background">@color/feeder_orange</item>
    </style>

    <style name="QuizResultTextAppearance" parent="android:TextAppearance.Material.Headline">
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>
</resources>