<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/quiz_preview_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/preview_image_height"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_margin="@dimen/margin_small"

        android:id="@+id/quiz_progress_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>

    <ProgressBar
        android:layout_margin="@dimen/margin_small"
        android:id="@+id/quiz_remaining_time_progress"
        style="@android:style/Widget.ProgressBar.Horizontal"

        android:max="@integer/quiz_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_margin="@dimen/margin_small"

        android:id="@+id/quiz_answer_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_margin="@dimen/margin_small"

        android:id="@+id/quiz_answer_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_margin="@dimen/margin_small"

        android:id="@+id/quiz_answer_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
